    <PreferenceCategory
        android:icon="@android:drawable/ic_menu_info_details"
        app:title="@string/messages_header">

        <Preference
            android:icon="@drawable/round_format_paint_24"
            android:key="monet_select"
            android:summary="Colour applied to whole system"
            android:title="Select System Colour" />
