            android:icon="@drawable/round_format_paint_24"
            android:key="vibrant_select"
            android:summary="Vibrant Colours (More Accurate)"
            android:title="Select System Colour" />
        <ListPreference
            android:icon="@drawable/baseline_color_lens_24"
            app:defaultValue="reply"
            app:entries="@array/reply_entries"
            app:entryValues="@array/reply_values"
            app:key="reply"
            app:title="@string/change_accent_color"
            app:useSimpleSummaryProvider="true" />

    </PreferenceCategory>

